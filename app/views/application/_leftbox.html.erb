	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				  <%= image_tag user.get_image, size:"100x100" %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= current_user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= current_user.introduction %></th>
	      </tr>
	    </table>

	    <div class='row'>
			  <% if user == current_user %>
			    <%= link_to edit_user_path(user), class: "edit-icon" do %>
	          <i class="fa-solid fa-user-gear"></i>
					<% end %>
				<% else %>
				  <%= link_to user_path(current_user), class: "edit-icon" do %>
						<i class="fa-solid fa-user-gear"></i>
					<% end %>
				<% end %>
	    </div>

	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: book do |f| %>
        <div class="form-group">
				  <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
			  	<%= f.label :opinion, "Opinion" %>
          <%= f.text_area :opinion, class: "form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success mt-2" %>
      <% end %>
	  </div>