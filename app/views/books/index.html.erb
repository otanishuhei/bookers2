<div class='container px-5 px-sm-0'>
  <%= render 'error_messages', object: @new_book %>

	<div class='row'>
	  <%= render 'leftbox', user: current_user, book: @new_book %>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
        <colgroup>
          <col style="width: 10%;">  <%# 画像の列 %>
          <col style="width: 30%;">  <%# Titleの列 %>
          <col style="width: 60%;">  <%# Opinionの列 %>
        </colgroup>

	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	        </tr>
	      </thead>

	      <tbody>
				  <% @books.each do |book| %>
						<tr>
						  <td>
							  <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_image, size:"80x80" %>
								<% end %>
              </td>
						  <td>
                <%= link_to book.title, book_path(book) %>
              </td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>