<div class='container px-5 px-sm-0'>
	<div class='row'>

	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				  <% if @user.image.attached? %>
	          <%= image_tag @user.image, size:"100x100" %>
				  <% else %>
					  <%= image_tag 'default-image.jpg', size:"100x100" %>
					<% end %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
			  <%= link_to edit_user_path(@user), class: "edit-btn" do %>
	        <i class="fa-solid fa-user-gear"></i>
				<% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @book do |f| %>
        <div class="form-group">
				  <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
			  	<%= f.label :opinion, "Opinion" %>
          <%= f.text_area :opinion, class: "form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success mt-2" %>
      <% end %>
	  </div>

	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>

	      <tbody>
				  <% @books.each do |book| %>
						<tr>
						  <td><%= image_tag book.user.image %></td>
						  <td><%= book.title %></td>
							<td><%= book.opinion %></td>
						</tr>
					<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>