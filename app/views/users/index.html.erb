<div class='container px-5 px-sm-0'>
	<div class='row'>

	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				  <% if current_user.image.attached? %>
	          <%= image_tag current_user.image, size:"100x100" %>
				  <% else %>
					  <%= image_tag 'default-image.jpg', size:"100x100" %>
					<% end %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= current_user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= current_user.introduction %></th>
	      </tr>
	    </table>

	    <div class='row'>
			  <%= link_to edit_user_path(current_user), class: "edit-icon" do %>
	        <i class="fa-solid fa-user-gear"></i>
				<% end %>
	    </div>

	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @book do |f| %>
        <div class="form-group">
				  <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
			  	<%= f.label :opinion, "Opinion" %>
          <%= f.text_area :opinion, class: "form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success mt-2" %>
      <% end %>
	  </div>

	  <div class='col-md-8 offset-md-1'>
	    <h2>Users</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th>image</th>
            <th></th>
	          <th>name</th>
	          <th></th>
	          <th></th>
            <th></th>
            <th></th>
	        </tr>
	      </thead>

	      <tbody>
				  <% @users.each do |user| %>
						<tr>
						  <td>
                <% if user.image.attached? %>
	                <%= image_tag current_user.image, size:"80x80" %>
			        	<% else %>
					        <%= image_tag 'default-image.jpg', size:"80x80" %>
			      		<% end %>
              </td>
              <td></td>
						  <td><%= user.name %></td>
              <td></td>
              <td></td>
							<td><%= link_to "Show", "user_path(user)" %></td>
              <td></td>
						</tr>
					<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>