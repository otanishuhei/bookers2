<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= render 'error_messages', object: @user %>

      <h2 class="mb-3">User info</h2>
	    <%= form_with model: @user do |f| %>
        <div class="form-group">
			  	<%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
			    <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary mt-2 mb-3" %>
      <% end %>
  	</div>
  </div>
</div>
